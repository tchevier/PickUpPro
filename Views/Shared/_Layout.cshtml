<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PickUp Pro</title>
    <link rel="icon" type="image/png" href="~/images/caricon.png"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PickUpApp.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
    
</head>

<body>
    <div id="canvas" class="canvas"></div>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark mt-1 d-flex justify-content-center">
                <div class="col-lg-6 d-flex justify-content-center">
                    <a class="nav-link fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <img id="logo" src="~/images/pickupprologo3.png" class="image-fluid"/>
                    </a>
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"></a>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link fw-bold text-light" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold" asp-area="" asp-controller="Parents" asp-action="RegistrationForm">Parents</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold text-light" asp-area="" asp-controller="Admins" asp-action="RegistrationForm">Admins</a>
                        </li>
                        @if(@Context.Session.GetString("PID") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-bold text-light" asp-controller="Parents" asp-action="RenderMessages">Notifications</a>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Parents" asp-action="Logout" method="POST">
                                    <button id="logout-btn" class="btn btn-link fw-bold text-light  " style="text-decoration: none;" type="submit">Logout</button>
                                </form>
                            </li>
                        }
                        @if(@Context.Session.GetString("AID") != null)
                        {
                            <li class="nav-item">
                                <form asp-controller="Admins" asp-action="Logout" method="POST">
                                    <button id="logout-btn" class="btn btn-link fw-bold text-light" style="text-decoration: none;" type="submit">Logout</button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
        </nav>
    </header>
        <main role="main" class="">
            @RenderBody()
        </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
